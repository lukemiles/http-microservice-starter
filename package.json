{
  "name": "http-microservice-starter",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=8.0.0"
  },
  "author": "Luke Miles <luke@restocks.io>",
  "scripts": {
    "start": "node ./dist/app",
    "dev": "PORT=3020 nodemon src/app.js --exec babel-node",
    "build": "rm -rf dist; babel src -d dist",
    "pretty": "prettier --single-quote --trailing-comma es5 --write \"src/**/*.js\"",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "deo": "^0.0.2",
    "express": "^4.15.3",
    "morgan": "^1.8.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-node8": "^1.1.2",
    "husky": "^0.14.2",
    "lint-staged": "^4.0.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.5.2"
  },
  "lint-staged": {
    "*.js": ["prettier --single-quote --trailing-comma es5 --write", "git add"]
  }
}
